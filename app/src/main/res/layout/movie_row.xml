<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/dark_violet"
    android:layout_margin="2dp"
    android:layout_height="160dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:layout_above="@+id/movie_name"
        app:cardBackgroundColor="@color/dark_violet"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/thumbnail1"/>

        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/year"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:lines="1"
        android:text="@string/sample_movie_name"
        android:textColor="@color/white"
        android:textSize="10sp"/>


    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:text="@string/year"
        android:textColor="@color/white"
        android:textSize="9sp"/>


</RelativeLayout>